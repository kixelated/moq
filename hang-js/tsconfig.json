{
	"extends": "../tsconfig.json",
	"include": ["src"],
	"exclude": ["node_modules", "dist"],
	"compilerOptions": {
		"lib": ["esnext", "dom"],
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "bundler",

		"outDir": "dist",
		"declaration": true,
		"sourceMap": true,
		"isolatedModules": true
	},
	"paths": {
		"@/*": ["*"]
	}
}
