{
	"compilerOptions": {
		"lib": ["DOM", "ES2020"],
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowJs": true,

		"strict": true,
		// TODO: Enable when all code is refactored
		//"noUnusedLocals": true,
		//"noUnusedParameters": true,
		"skipLibCheck": true,
		"isolatedModules": true,

		"useDefineForClassFields": true,

		/* Emit Options */
		"baseUrl": ".",
		"outDir": "dist",
		"declaration": true,
		"sourceMap": true,

		// JSX
		"jsx": "react",
		"jsxFactory": "jsx",
		"jsxFragmentFactory": "jsxFragment",

		"paths": {
			"@dist/*": ["dist/*"]
		}
	},

	"include": ["moq-web/src"],
	"exclude": ["node_modules"],

	"tsc-alias": {
		"verbose": false,
		"resolveFullPaths": true
	}
}
