{
	"compilerOptions": {
		"lib": ["DOM", "ES2020"],
		"target": "ES2020",
		"module": "ESNext",
		"moduleResolution": "bundler",

		"strict": true,
		// TODO: Enable when all code is refactored
		//"noUnusedLocals": true,
		//"noUnusedParameters": true,
		"skipLibCheck": true,
		"isolatedModules": true,

		"useDefineForClassFields": true,

		"jsx": "react"
	},

	"include": ["**/*"],
	"exclude": ["node_modules"]
}
